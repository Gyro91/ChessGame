#ifndef physics_S3D
#define physics_S3D

#include ".\s3d\PhManager.s3d"

#define DELTA_T 0.02

var manager_psx;
var rigidMaterial;

function InitPhysicsEngine(){
	setLocalDir("..\\..\\..\\physics\\lib");
	manager_psx = CVmPhManager();  
	manager_psx.InitPhysics();	
	rigidMaterial = manager_psx.NewMaterial(0.5, 1, 0.6);
	setLocalDir();
}

function RunPhysicsEngine(delta){
	manager_psx.Simulate(delta);
	manager_psx.UpdateGraphics();
}

#endif
